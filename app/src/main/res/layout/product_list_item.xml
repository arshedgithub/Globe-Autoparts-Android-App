<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/list_product_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/globe_logo"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/list_product_image"
            android:layout_marginStart="15sp"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="10sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_product_name"
                android:layout_width="220sp"
                android:layout_height="25dp"
                android:text="24w/12 wostron"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/list_product_category"
                android:layout_width="220sp"
                android:layout_height="20dp"
                android:text="Bulb"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/list_product_price"
                android:layout_width="220sp"
                android:layout_height="20dp"
                android:text="LKR 00.00"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/list_product_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/badge_background"
                android:text="available"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                android:paddingVertical="7dp"
                android:paddingHorizontal="10dp" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>